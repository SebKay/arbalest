{
    "name": "sebkay/arbalest",
    "version" : "1.0.0",
    "authors": [
        {
            "name": "Seb Kay",
            "email": "seb@sebkay.com",
            "homepage": "https://sebkay.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Arbalest\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "require" : {
        "php" : ">=7.2",
        "mailchimp/marketing": "^3.0",
        "vlucas/phpdotenv": "^5.2",
        "fzaninotto/faker": "^1.9"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.12",
        "phpunit/phpunit": "^9.3"
    },
    "scripts" : {
        "refresh" : "git clean -xffd && composer install --ansi",
        "phpcs" : "./vendor/bin/phpcs --standard=PSR12 ./src",
        "phpcbf": "./vendor/bin/phpcbf --standard=PSR12 src",
        "psalm" : "./vendor/bin/psalm --show-info=true",
        "phpunit" : "./vendor/bin/phpunit --colors=always --testdox",
        "phpunit:coverage" : "./vendor/bin/phpunit --colors=always --coverage-html coverage"
    }
}
